method <doarmright>[
		if armdirection=1 or armdirection=0 then

			arm.addmotion 2,"armright", MakePoint( 0, 1, 0), 0.1, 0.5
		end if

]


method <doarmleft> [

		if armdirection=2 or armdirection=0 then

			arm.addmotion 2,"armleft", MakePoint( 0, -1, 0), 0.1, 0.5

		end if

]



bindings {

	0=[doarmright]
	1=[doarmleft]

	.mouseinput = trapping

}





