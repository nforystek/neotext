variable <armdirection> = 0

portal <leftedge>
{

	.location =[-1, 0, 3]
	.range =2
	.enabled= true
	.dropsmotions = true
	oninrange [ <arm>
		armdirection=1
		doarmright


	]
	onoutrange [ <arm>
		armdirection=0
	]

}


portal <rightedge>
{
	.location=[ 3, 0, -1]
	.range =2
	.enabled= true
	.dropsmotions = true
	oninrange [ <arm>
		armdirection=2
		doarmleft

	]
	onoutrange [ <arm>
		armdirection=0
	]


}

