
dim axis
dim speed
speed=.01
dim gpointx
dim gpointy
dim gpointz
dim toggoff

bindings {
	UP = [Orientate Point(0.001,0,0), Molecules("Player")]
	DOWN = [Orientate Point(-0.001,0,0), Molecules("Player")]
	LEFT = [Orientate Point(0,-0.001,0), Molecules("Player")]
	RIGHT = [Orientate Point(0,0.001,0), Molecules("Player")]

	PGUP = []
	PGDN = []

	E = [Position Point(0,0,speed), Molecules("Player")]
	D = [Position Point(0,0,-speed), Molecules("Player")]
	W = [Position Point(-speed,0,0), Molecules("Player")]
	R = [Position Point(speed,0,0), Molecules("Player")]
	S = [Position Point(0,speed,0), Molecules("Player")]
	F = [Position Point(0,-speed,0), Molecules("Player")]

'	X = [ axis = "x" ]
'	Y = [ axis = "y" ]
'	Z = [ axis = "z" ]

	1 = [ speed=.01 ]
	2 = [ speed=.1 ]
	3 = [ speed=1 ]
	4 = [ speed=10 ]
	5 = [ speed=100 ]

	X = [ if Timer-toggoff > .5 or toggoff = 0 then 
		toggoff=Timer

			gpointx=gpointx+90
			if gpointx>=360 then gpointx=0
		end if
		]
	Y = [ if Timer-toggoff > .5 or toggoff = 0 then 
		toggoff=Timer

			gpointy=gpointy+90
			if gpointy>=360 then gpointy=0
		end if
		]
	Z = [ if Timer-toggoff > .5 or toggoff = 0 then 
		toggoff=Timer

			gpointz=gpointz+90
			if gpointz>=360 then gpointz=0
		end if
		]


	.Controller = Trapping
	.Serialize=false
}
