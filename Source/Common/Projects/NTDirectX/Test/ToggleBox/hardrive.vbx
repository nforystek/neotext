
bindings {
	UP = [Player.Rotate.X=Player.Rotate.X-0.1]
	DOWN = [Player.Rotate.X=Player.Rotate.X+0.1]
	LEFT = [Player.Rotate.Y=Player.Rotate.Y+0.1]
	RIGHT = [Player.Rotate.Y=Player.Rotate.Y-0.1]

	PGUP = [If Player.Offset.Z>0 then Player.Offset.Z=Player.Offset.Z-0.01]
	PGDN = [Player.Offset.Z=Player.Offset.Z+0.01]

	E = [Player.MoveForward 0.1, 0.5]
	D = [Player.MoveBackward 0.1, 0.5]
	W = [Player.MoveLeft 0.1, 0.5]
	R = [Player.MoveRight 0.1, 0.5]
	S = [Player.MoveUp 0.1, 0.5]
	F = [Player.MoveDown 0.1, 0.5]

	.Controller = Trapping
	.Serialize=false
}

