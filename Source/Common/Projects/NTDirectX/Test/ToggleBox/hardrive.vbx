}
molecule <Arm> {
	.file = "Harddrive\arm.x"
	.Visible=true
	.range =3
	.origin.z=-4
	.origin.x=-.8
	'.rotate.y=19
	.rotate.y=338

	activity {
		.action = rotate
		.axis = [ 0,-1,0 ]
		.recount=-1
		.emphasis = .5
	}
}
method <pullarm> {
	arm.activity.item(1).axis.y = -abs(arm.activity.item(1).axis.y)

'		Arm.rotate.y=Arm.rotate.y-0.02
'		'if Arm.rotate.y<338 then arm.rotate.y=338
'		if Arm.rotate.y<0 then Arm.rotate.y = Arm.rotate.y+360
}
method <pusharm> {
	arm.activity.item(1).axis.y = abs(arm.activity.item(1).axis.y)
		'Arm.rotate.y=Arm.rotate.y+0.01
		''if Arm.rotate.y>19 then arm.rotate.y=19	
		'if Arm.rotate.y>360 then Arm.rotate.y =Arm.rotate.y-360
}
