molecule <Rock> {
	.Origin.Z=0
	.Range =1
	.File = "Box\Box.x"
	.offset.x=1
	.scaled.x=.8
	.scaled.y=.8
	.scaled.z=.8
	activity {
		.Action = Rotate
		.Axis = [ 0,-0.6,0 ]
		.recount = -1
		.emphasis = 1
	}
	OnInRange [ <Arm>
		'pullarm

	]
	.Relative =true

}
